//- Mixins
mixin section-header(name)
	div.section-header
		h2=name
		a.minimize-button(href='javascript:void(0)') [ - ]

mixin subsection-header(name)
	div.section-header
		h3=name
		a.minimize-button(href='javascript:void(0)') [ - ]

//- Actual HTML file
doctype html
html
	head
		include ./includes/head.pug
		link(rel="stylesheet" type="text/css" href="/static/style/cv.css")
